@model AcunMedyaPortfolyoProje1.Models.Tbl_Slider

@{
    ViewBag.Title = "UpdateSlider";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>UpdateSlider</h2>

<form method="post">
    @Html.HiddenFor(x => x.SliderID)
    <label>NameSurname</label>
    @Html.TextBoxFor(x => x.NameSurname, new { @class = "form-control" })<br />
    <label>Description</label>
    @Html.TextBoxFor(x => x.Description, new { @class = "form-control" })<br />
    <label>Image Url</label>
    @Html.TextBoxFor(x => x.ImageUrl, new { @class = "form-control" })<br />


    <button>Güncelle</button>
</form>