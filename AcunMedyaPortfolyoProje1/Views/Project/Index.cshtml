@model List<AcunMedyaPortfolyoProje1.Models.Tbl_Project>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}



<div class="container">
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Project ID</th>
                <th>Project Name</th>
                <th>Description</th>
                <th>Project Link</th>
                <th>Image 1</th>
                <th>Image 2</th>
                <th>Image 3</th>   
                <th>Category</th>

                <th>Güncelle</th>
                <th>Sil</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                count++;

                <tr>
                    <td>@item.ProjectID</td>
                    <td>@item.ProjectName</td>
                    <td>@item.Description</td>
                    <td>@item.ProjectLink</td>
                    <td><img src="@item.Image1" style="width:50px"/></td>
                    <td><img src="@item.Image2" style="width:50px" /></td>
                    <td><img src="@item.Image3" style="width:50px" /></td>    
                    <td>@item.Tbl_Category.CategoryName</td>

                    <td><a href="/Project/UpdateProject/@item.ProjectID" class="btn btn-success">Güncelle</a></td>
                    <td><a href="/Project/RemoveProject/@item.ProjectID" class="btn btn-danger">Sil</a></td>
                </tr>
            }

        </tbody>
    </table>
    <a href="/Project/CreateProject/" class="btn btn-secondary">Oluştur</a>
</div>