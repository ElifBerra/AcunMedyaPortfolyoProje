@model AcunMedyaPortfolyoProje1.Models.Tbl_Message

@{
    ViewBag.Title = "UpdateMessage";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>UpdateMessage</h2>

<form method="post">
    @Html.HiddenFor(x => x.MessageID)
    <label>Name Surname</label>
    @Html.TextBoxFor(x => x.NameSurname, new { @class = "form-control" })<br />
    <label>Mail</label>
    @Html.TextBoxFor(x => x.Mail, new { @class = "form-control" })<br />
    <label>Subject</label>
    @Html.TextBoxFor(x => x.Subject, new { @class = "form-control" })<br />
    <label>Message Content</label>
    @Html.TextBoxFor(x => x.MessageContent, new { @class = "form-control" })<br />


    <button>Güncelle</button>
</form>