@model List<AcunMedyaPortfolyoProje1.Models.Tbl_Testimonial>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Burası Testimonial sayfası</h2>

<div class="container">
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Testimonial ID</th>
                <th>Description1</th>
                <th>Testimonial Name</th>
                <th>Description2</th>
                <th>Image URL</th>
                <th>Tıtle</th>

                <th>Güncelle</th>
                <th>Sil</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.TestimonialID</td>
                    <td>@item.Description1</td>
                    <td>@item.TestimonialName</td>
                    <td>@item.Description2</td>
                    <td><img src="@item.ImageUrl" style="width:50px" /></td>
                    <td>@item.Title</td>

                    <td><a href="/Testimonial/UpdateTestimonial/@item.TestimonialID" class="btn btn-success">Güncelle</a></td>
                    <td><a href="/Testimonial/RemoveTestimonial/@item.TestimonialID" class="btn btn-danger">Sil</a></td>
                </tr>
            }
        </tbody>
    </table>
    <a href="/Testimonial/CreateTestimonial/" class="btn btn-secondary">Oluştur</a>
</div>