@model List<AcunMedyaPortfolyoProje1.Models.Tbl_Services>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}



<div class="container">
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Services ID</th>
                <th>Description</th>
                <th>Title</th>
                <th>Icon Url</th>
                <th>Description2</th>
                <th>Güncelle</th>
                <th>Sil</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.ServicesID</td>
                    <td>@item.Description</td>
                    <td>@item.Title</td>
                    <td><img src="@item.IconUrl" style="width:50px" /></td>                    
                    <td>@item.Description2</td>

                    <td><a href="/Hizmetler/UpdateServices/@item.ServicesID" class="btn btn-success">Güncelle</a></td>
                    <td><a href="/Hizmetler/RemoveServices/@item.ServicesID" class="btn btn-danger">Sil</a></td>
                </tr>
            }

            
        </tbody>
    </table>
    <a href="/Hizmetler/CreateServices/" class="btn btn-secondary">Oluştur</a>
</div>